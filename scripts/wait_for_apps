#!/bin/sh

for app in 3001 3002
do
    until curl -v --silent localhost:$app/health 2>&1 | grep healthy; do
      echo "Waiting for apps to start accepting traffic...";
      sleep 1
  done
done

until curl -v --silent localhost:3000/ping.json 2>&1 | grep APP_SHA; do
    echo "Waiting for apps to start accepting traffic...";
    sleep 1
done

echo "All apps accepting traffing";
