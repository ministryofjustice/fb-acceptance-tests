#!/bin/sh

for ((port=16080; port <= 16084; port++)); do
  until wget http://localhost:$port/ping.json -O - | grep APP_SHA; do
    echo "Waiting for service on port ${port} to start accepting traffic...";
      sleep 9
  done
done

for ((port=18001; port <= 18011; port++)); do
  until wget http://localhost:$port/ping.json -O - | grep APP_SHA; do
    echo "Waiting for service on port ${port} to start accepting traffic...";
      sleep 9
  done
done

echo "Services accepting traffic";
